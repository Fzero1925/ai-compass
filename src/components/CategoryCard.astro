---
export interface Props {
  id: string;
  name: string;
  description: string;
  icon: string;
  count: number;
}

const { id, name, description, icon, count } = Astro.props;
---

<a 
  href={`/tools/${id}`}
  class="category-card block transform hover:scale-105 transition-all duration-300"
>
  <div class="flex items-center justify-between mb-4">
    <div class="text-3xl">{icon}</div>
    <div class="bg-white/20 backdrop-blur-sm px-3 py-1 rounded-full">
      <span class="text-sm font-medium">{count} 个工具</span>
    </div>
  </div>
  
  <h3 class="text-xl font-bold mb-2">{name}</h3>
  <p class="text-white/80 text-sm leading-relaxed">{description}</p>
  
  <div class="mt-4 flex items-center text-sm font-medium">
    <span>探索工具</span>
    <svg class="ml-2 w-4 h-4 transform group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
    </svg>
  </div>
</a>