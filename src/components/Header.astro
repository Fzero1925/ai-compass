---
// Header component with navigation
---

<header class="sticky top-0 z-50 bg-white/95 backdrop-blur-sm border-b border-gray-200">
  <div class="max-w-6xl mx-auto px-4 sm:px-6">
    <div class="flex items-center justify-between h-16">
      <!-- Logo & Brand -->
      <div class="flex items-center space-x-2">
        <div class="w-8 h-8 bg-gradient-to-br from-primary-500 to-primary-600 rounded-lg flex items-center justify-center">
          <span class="text-white font-bold text-sm">AI</span>
        </div>
        <span class="text-xl font-bold text-gray-900">Compass</span>
        <span class="hidden sm:inline text-sm text-gray-500 ml-2">AI工具指南针</span>
      </div>
      
      <!-- Navigation -->
      <nav class="hidden md:flex items-center space-x-8">
        <a href="/" class="text-gray-700 hover:text-primary-600 font-medium transition-colors">
          首页
        </a>
        <a href="/tools/image" class="text-gray-700 hover:text-primary-600 font-medium transition-colors">
          图像工具
        </a>
        <a href="/tools/text" class="text-gray-700 hover:text-primary-600 font-medium transition-colors">
          文本工具
        </a>
        <a href="/tools/productivity" class="text-gray-700 hover:text-primary-600 font-medium transition-colors">
          效率工具
        </a>
        <a href="/about" class="text-gray-700 hover:text-primary-600 font-medium transition-colors">
          关于
        </a>
      </nav>
      
      <!-- Search & CTA -->
      <div class="flex items-center space-x-4">
        <!-- Search button (placeholder) -->
        <button class="p-2 text-gray-400 hover:text-gray-600 transition-colors">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
          </svg>
        </button>
        
        <!-- Submit Tool CTA -->
        <a href="/submit" class="btn-primary hidden sm:inline-flex">
          提交工具
        </a>
        
        <!-- Mobile menu button -->
        <button class="md:hidden p-2 text-gray-400 hover:text-gray-600">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>
      </div>
    </div>
  </div>
</header>