---
import BaseLayout from './BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import type { ToolDetail } from '../data/toolDetails';

export interface Props extends ToolDetail {
  title?: string;
  description?: string;
}

const toolData = Astro.props;
const {
  title: pageTitle = `${toolData.title} - AI工具详细评测 | AI Compass`,
  description: pageDescription = `${toolData.title}详细评测：${toolData.description}。包含功能介绍、用户评价、定价信息等全面分析。`,
} = Astro.props;

const categoryNames = {
  'image-tools': '图像工具',
  'text-tools': '文本工具',
  'productivity': '效率工具',
  'video-tools': '视频工具'
};

const pricingLabels = {
  'free': '免费',
  'freemium': '免费增值',
  'paid': '付费'
};

const pricingColors = {
  'free': 'bg-green-100 text-green-800',
  'freemium': 'bg-blue-100 text-blue-800',
  'paid': 'bg-orange-100 text-orange-800'
};
---

<BaseLayout title={pageTitle} description={pageDescription}>
  <Header />
  
  <main class="min-h-screen bg-gray-50">
    <!-- Tool Header -->
    <section class="bg-white border-b border-gray-200">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 py-8">
        <!-- Breadcrumb -->
        <nav class="mb-6">
          <ol class="flex items-center space-x-2 text-sm text-gray-500">
            <li><a href="/" class="hover:text-primary-600">首页</a></li>
            <li>/</li>
            <li><a href={`/tools/${toolData.category}`} class="hover:text-primary-600">{categoryNames[toolData.category as keyof typeof categoryNames]}</a></li>
            <li>/</li>
            <li class="text-gray-900">{toolData.title}</li>
          </ol>
        </nav>
        
        <!-- Tool Info -->
        <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-6">
          <div class="flex-1">
            <div class="flex items-center space-x-3 mb-4">
              <h1 class="text-3xl md:text-4xl font-bold text-gray-900">{toolData.title}</h1>
              {toolData.hot && (
                <span class="bg-red-100 text-red-800 text-sm font-medium px-3 py-1 rounded-full">
                  🔥 热门
                </span>
              )}
            </div>
            
            <p class="text-lg text-gray-600 mb-4">{toolData.description}</p>
            
            <div class="flex flex-wrap items-center gap-4 mb-6">
              <!-- Category -->
              <span class="bg-gray-100 text-gray-700 px-3 py-1 rounded-full text-sm font-medium">
                {categoryNames[toolData.category as keyof typeof categoryNames]}
              </span>
              
              <!-- Pricing -->
              <span class={`px-3 py-1 rounded-full text-sm font-medium ${pricingColors[toolData.pricing]}`}>
                {pricingLabels[toolData.pricing]}
              </span>
              
              <!-- Rating -->
              <div class="flex items-center space-x-2">
                <div class="flex items-center">
                  <span class="text-yellow-400 mr-1">★</span>
                  <span class="font-semibold text-gray-900">{toolData.rating}</span>
                </div>
                <span class="text-gray-500 text-sm">({toolData.rating_count} 评价)</span>
              </div>
              
              <!-- Last Updated -->
              <span class="text-gray-500 text-sm">
                更新于 {toolData.last_updated}
              </span>
            </div>
            
            <!-- Tags -->
            <div class="flex flex-wrap gap-2">
              {toolData.tags.map(tag => (
                <span class="bg-primary-50 text-primary-700 text-sm px-3 py-1 rounded-full">
                  {tag}
                </span>
              ))}
            </div>
          </div>
          
          <!-- CTA -->
          <div class="md:ml-8">
            <a
              href={toolData.url}
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center justify-center bg-primary-600 hover:bg-primary-700 text-white font-semibold px-8 py-3 rounded-xl transition-colors text-lg"
            >
              立即使用
              <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
              </svg>
            </a>
          </div>
        </div>
      </div>
    </section>
    
    <!-- Tool Detail Content -->
    <div class="max-w-4xl mx-auto px-4 sm:px-6 py-12">
      <slot />
    </div>
  </main>
  
  <Footer />
</BaseLayout>