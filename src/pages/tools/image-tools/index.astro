---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import Header from '../../../components/Header.astro';
import Footer from '../../../components/Footer.astro';
import ToolCard from '../../../components/ToolCard.astro';
import { featuredTools } from '../../../data/tools';

// Filter tools by category
const imageTools = featuredTools.filter(tool => tool.category === 'image-tools');

const pageTitle = "图像工具 - AI Compass";
const pageDescription = "发现最优质的AI图像处理工具，包含图像生成、编辑、增强等多种功能的专业工具推荐和评测。";
---

<BaseLayout title={pageTitle} description={pageDescription}>
  <Header />
  
  <main class="min-h-screen bg-gray-50">
    <!-- Category Header -->
    <section class="bg-gradient-to-br from-primary-50 via-white to-secondary-50 py-16">
      <div class="max-w-6xl mx-auto px-4 sm:px-6">
        <!-- Breadcrumb -->
        <nav class="mb-6">
          <ol class="flex items-center space-x-2 text-sm text-gray-500">
            <li><a href="/" class="hover:text-primary-600">首页</a></li>
            <li>/</li>
            <li class="text-gray-900">图像工具</li>
          </ol>
        </nav>
        
        <div class="text-center">
          <div class="text-6xl mb-6">🎨</div>
          <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6">
            AI 图像工具
          </h1>
          <p class="text-xl text-gray-600 mb-8 max-w-3xl mx-auto">
            专业的AI图像处理工具集合，涵盖图像生成、编辑、增强、背景处理等多个领域，帮你轻松完成各种图像处理任务。
          </p>
          
          <!-- Stats -->
          <div class="flex justify-center space-x-8 text-sm text-gray-600 mb-8">
            <div class="text-center">
              <div class="font-semibold text-2xl text-gray-900">{imageTools.length}+</div>
              <div>精选工具</div>
            </div>
            <div class="text-center">
              <div class="font-semibold text-2xl text-gray-900">500+</div>
              <div>用户评价</div>
            </div>
            <div class="text-center">
              <div class="font-semibold text-2xl text-gray-900">95%</div>
              <div>满意度</div>
            </div>
          </div>
        </div>
      </div>
    </section>
    
    <!-- Filters -->
    <section class="py-8 bg-white border-b border-gray-200">
      <div class="max-w-6xl mx-auto px-4 sm:px-6">
        <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-6">
          <!-- Search -->
          <div class="flex-1 max-w-md">
            <div class="relative">
              <input
                type="search"
                placeholder="搜索图像工具..."
                class="w-full pl-10 pr-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent"
              />
              <div class="absolute inset-y-0 left-0 pl-3 flex items-center">
                <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                </svg>
              </div>
            </div>
          </div>
          
          <!-- Filter Buttons -->
          <div class="flex flex-wrap gap-3">
            <button class="bg-primary-600 text-white px-4 py-2 rounded-lg text-sm font-medium">
              全部
            </button>
            <button class="bg-gray-100 text-gray-700 px-4 py-2 rounded-lg text-sm font-medium hover:bg-gray-200 transition-colors">
              图像生成
            </button>
            <button class="bg-gray-100 text-gray-700 px-4 py-2 rounded-lg text-sm font-medium hover:bg-gray-200 transition-colors">
              背景处理
            </button>
            <button class="bg-gray-100 text-gray-700 px-4 py-2 rounded-lg text-sm font-medium hover:bg-gray-200 transition-colors">
              图像增强
            </button>
            <button class="bg-gray-100 text-gray-700 px-4 py-2 rounded-lg text-sm font-medium hover:bg-gray-200 transition-colors">
              免费工具
            </button>
          </div>
          
          <!-- Sort -->
          <div class="flex items-center space-x-2">
            <span class="text-sm text-gray-500">排序：</span>
            <select class="border border-gray-300 rounded px-3 py-2 text-sm focus:ring-2 focus:ring-primary-500 focus:border-transparent">
              <option>最新发布</option>
              <option>用户评分</option>
              <option>使用人数</option>
              <option>价格从低到高</option>
            </select>
          </div>
        </div>
      </div>
    </section>
    
    <!-- Tools Grid -->
    <section class="py-12">
      <div class="max-w-6xl mx-auto px-4 sm:px-6">
        {imageTools.length > 0 ? (
          <>
            <div class="flex items-center justify-between mb-8">
              <h2 class="text-2xl font-bold text-gray-900">
                找到 {imageTools.length} 个图像工具
              </h2>
            </div>
            
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
              {imageTools.map(tool => (
                <ToolCard {...tool} />
              ))}
            </div>
          </>
        ) : (
          <div class="text-center py-16">
            <div class="text-6xl mb-4">🔍</div>
            <h3 class="text-xl font-semibold text-gray-900 mb-2">暂无图像工具</h3>
            <p class="text-gray-600">我们正在努力收集更多优质的图像工具，敬请期待！</p>
          </div>
        )}
      </div>
    </section>
    
    <!-- CTA Section -->
    <section class="py-16 bg-primary-600">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 text-center">
        <h2 class="text-3xl font-bold text-white mb-4">
          没找到合适的工具？
        </h2>
        <p class="text-primary-100 mb-8 text-lg">
          告诉我们你的需求，或者推荐优质的AI图像工具
        </p>
        
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a
            href="/submit"
            class="bg-white text-primary-600 font-semibold px-8 py-3 rounded-lg hover:bg-gray-50 transition-colors"
          >
            推荐工具
          </a>
          <a
            href="/contact"
            class="border-2 border-white text-white font-semibold px-8 py-3 rounded-lg hover:bg-white hover:text-primary-600 transition-colors"
          >
            联系我们
          </a>
        </div>
      </div>
    </section>
  </main>
  
  <Footer />
</BaseLayout>