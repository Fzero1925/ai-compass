---
import ToolDetailLayout from '../../../layouts/ToolDetailLayout.astro';
import ToolDetailSection from '../../../components/ToolDetailSection.astro';
import { toolDetails } from '../../../data/toolDetails';

const toolData = toolDetails['nano-banana'];
if (!toolData) {
  return Astro.redirect('/404');
}
---

<ToolDetailLayout {...toolData}>
  <!-- 1. 工具简介 -->
  <ToolDetailSection title="工具简介" icon="📋">
    <div class="space-y-6">
      <div>
        <h3 class="text-lg font-semibold text-gray-900 mb-3">产品概述</h3>
        <p class="text-gray-600 leading-relaxed">{toolData.introduction.overview}</p>
      </div>
      
      <div>
        <h3 class="text-lg font-semibold text-gray-900 mb-3">核心目标</h3>
        <p class="text-gray-600 leading-relaxed">{toolData.introduction.purpose}</p>
      </div>
      
      <div>
        <h3 class="text-lg font-semibold text-gray-900 mb-3">目标用户</h3>
        <div class="grid grid-cols-2 md:grid-cols-3 gap-3">
          {toolData.introduction.target_users.map(user => (
            <div class="bg-primary-50 text-primary-700 px-3 py-2 rounded-lg text-sm font-medium">
              {user}
            </div>
          ))}
        </div>
      </div>
    </div>
  </ToolDetailSection>

  <!-- 2. 核心亮点 -->
  <ToolDetailSection title="核心亮点" icon="⭐">
    <div class="space-y-8">
      <div>
        <h3 class="text-lg font-semibold text-gray-900 mb-4">主要功能</h3>
        <div class="space-y-3">
          {toolData.highlights.features.map(feature => (
            <div class="flex items-start space-x-3">
              <div class="w-2 h-2 bg-primary-500 rounded-full mt-2 flex-shrink-0"></div>
              <span class="text-gray-600">{feature}</span>
            </div>
          ))}
        </div>
      </div>
      
      <div>
        <h3 class="text-lg font-semibold text-gray-900 mb-4">产品优势</h3>
        <div class="grid md:grid-cols-2 gap-4">
          {toolData.highlights.advantages.map(advantage => (
            <div class="bg-green-50 border border-green-200 rounded-lg p-4">
              <div class="flex items-start space-x-3">
                <span class="text-green-500 text-sm">✓</span>
                <span class="text-gray-700 text-sm">{advantage}</span>
              </div>
            </div>
          ))}
        </div>
      </div>
      
      <div>
        <h3 class="text-lg font-semibold text-gray-900 mb-4">独特卖点</h3>
        <div class="space-y-3">
          {toolData.highlights.unique_selling_points.map(point => (
            <div class="bg-gradient-to-r from-primary-50 to-secondary-50 border border-primary-200 rounded-lg p-4">
              <div class="flex items-start space-x-3">
                <span class="text-primary-600 text-lg">🎯</span>
                <span class="text-gray-700">{point}</span>
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </ToolDetailSection>

  <!-- 3. 使用场景 -->
  <ToolDetailSection title="使用场景" icon="🎯">
    <div class="space-y-8">
      <div>
        <h3 class="text-lg font-semibold text-gray-900 mb-4">典型应用场景</h3>
        <div class="space-y-6">
          {toolData.use_cases.scenarios.map(scenario => (
            <div class="border border-gray-200 rounded-lg p-6">
              <h4 class="font-semibold text-gray-900 mb-2">{scenario.title}</h4>
              <p class="text-gray-600 mb-3">{scenario.description}</p>
              {scenario.example && (
                <div class="bg-gray-50 rounded-lg p-3">
                  <span class="text-sm text-gray-500">示例：</span>
                  <span class="text-sm text-gray-700">{scenario.example}</span>
                </div>
              )}
            </div>
          ))}
        </div>
      </div>
      
      <div class="grid md:grid-cols-2 gap-8">
        <div>
          <h3 class="text-lg font-semibold text-gray-900 mb-4">适用行业</h3>
          <div class="flex flex-wrap gap-2">
            {toolData.use_cases.industries.map(industry => (
              <span class="bg-blue-100 text-blue-800 text-sm px-3 py-1 rounded-full">
                {industry}
              </span>
            ))}
          </div>
        </div>
        
        <div>
          <h3 class="text-lg font-semibold text-gray-900 mb-4">用户类型</h3>
          <div class="flex flex-wrap gap-2">
            {toolData.use_cases.user_types.map(userType => (
              <span class="bg-purple-100 text-purple-800 text-sm px-3 py-1 rounded-full">
                {userType}
              </span>
            ))}
          </div>
        </div>
      </div>
    </div>
  </ToolDetailSection>

  <!-- 4. 社区评测 -->
  <ToolDetailSection title="社区评测" icon="💬">
    <div class="space-y-8">
      <!-- Expert Review -->
      {toolData.community_reviews.expert_review && (
        <div class="bg-gradient-to-br from-primary-50 to-secondary-50 rounded-lg p-6 border border-primary-200">
          <div class="flex items-center justify-between mb-4">
            <h3 class="text-lg font-semibold text-gray-900">专家评测</h3>
            <div class="flex items-center space-x-2">
              <span class="text-yellow-400 text-lg">★</span>
              <span class="font-bold text-xl text-gray-900">{toolData.community_reviews.expert_review.score}</span>
              <span class="text-gray-500">/5.0</span>
            </div>
          </div>
          <p class="text-gray-700 mb-4 font-medium">{toolData.community_reviews.expert_review.summary}</p>
          <p class="text-gray-600 text-sm leading-relaxed">{toolData.community_reviews.expert_review.detailed_analysis}</p>
        </div>
      )}
      
      <!-- Pros & Cons -->
      <div class="grid md:grid-cols-2 gap-6">
        <div>
          <h3 class="text-lg font-semibold text-gray-900 mb-4 flex items-center">
            <span class="text-green-500 mr-2">👍</span>
            用户好评
          </h3>
          <div class="space-y-3">
            {toolData.community_reviews.pros.map(pro => (
              <div class="flex items-start space-x-3">
                <span class="text-green-500 text-sm mt-1">✓</span>
                <span class="text-gray-600 text-sm">{pro}</span>
              </div>
            ))}
          </div>
        </div>
        
        <div>
          <h3 class="text-lg font-semibold text-gray-900 mb-4 flex items-center">
            <span class="text-orange-500 mr-2">👎</span>
            待改进点
          </h3>
          <div class="space-y-3">
            {toolData.community_reviews.cons.map(con => (
              <div class="flex items-start space-x-3">
                <span class="text-orange-500 text-sm mt-1">!</span>
                <span class="text-gray-600 text-sm">{con}</span>
              </div>
            ))}
          </div>
        </div>
      </div>
      
      <!-- User Feedback -->
      <div>
        <h3 class="text-lg font-semibold text-gray-900 mb-4">用户反馈</h3>
        <div class="space-y-4">
          {toolData.community_reviews.user_feedback.map(feedback => (
            <div class="bg-gray-50 rounded-lg p-4">
              <div class="flex items-center justify-between mb-2">
                <div class="flex items-center space-x-2">
                  <div class="flex items-center">
                    {[...Array(5)].map((_, i) => (
                      <span class={`text-sm ${i < feedback.rating ? 'text-yellow-400' : 'text-gray-300'}`}>★</span>
                    ))}
                  </div>
                  <span class="font-medium text-gray-900">{feedback.rating}/5</span>
                </div>
                {feedback.author && (
                  <span class="text-sm text-gray-500">— {feedback.author}</span>
                )}
              </div>
              <p class="text-gray-600 text-sm">{feedback.comment}</p>
            </div>
          ))}
        </div>
      </div>
    </div>
  </ToolDetailSection>

  <!-- 5. 使用渠道说明 -->
  <ToolDetailSection title="使用渠道说明" icon="💰">
    <div class="space-y-8">
      <!-- Pricing Plans -->
      <div>
        <h3 class="text-lg font-semibold text-gray-900 mb-6">定价方案</h3>
        <div class="grid md:grid-cols-3 gap-6">
          {toolData.access_info.pricing_plans.map(plan => (
            <div class={`relative border rounded-lg p-6 ${plan.recommended ? 'border-primary-500 bg-primary-50' : 'border-gray-200 bg-white'}`}>
              {plan.recommended && (
                <div class="absolute -top-3 left-1/2 transform -translate-x-1/2">
                  <span class="bg-primary-500 text-white text-xs px-3 py-1 rounded-full">推荐</span>
                </div>
              )}
              <div class="text-center mb-6">
                <h4 class="font-semibold text-gray-900 text-lg mb-2">{plan.name}</h4>
                <div class="text-3xl font-bold text-gray-900 mb-1">{plan.price}</div>
              </div>
              <div class="space-y-3">
                {plan.features.map(feature => (
                  <div class="flex items-start space-x-3">
                    <span class="text-green-500 text-sm mt-1">✓</span>
                    <span class="text-gray-600 text-sm">{feature}</span>
                  </div>
                ))}
              </div>
            </div>
          ))}
        </div>
      </div>
      
      <!-- Free Trial -->
      {toolData.access_info.free_trial && (
        <div class="bg-blue-50 border border-blue-200 rounded-lg p-6">
          <h3 class="text-lg font-semibold text-gray-900 mb-3">免费试用</h3>
          <p class="text-gray-600 mb-4">提供 {toolData.access_info.free_trial.duration} 免费试用期</p>
          <div class="space-y-2">
            <h4 class="font-medium text-gray-900">试用限制：</h4>
            {toolData.access_info.free_trial.limitations.map(limitation => (
              <div class="flex items-start space-x-2">
                <span class="text-blue-500 text-sm">•</span>
                <span class="text-gray-600 text-sm">{limitation}</span>
              </div>
            ))}
          </div>
        </div>
      )}
      
      <!-- System Requirements -->
      {toolData.access_info.system_requirements && (
        <div>
          <h3 class="text-lg font-semibold text-gray-900 mb-4">系统要求</h3>
          <div class="grid md:grid-cols-3 gap-6">
            <div>
              <h4 class="font-medium text-gray-900 mb-3">支持平台</h4>
              <div class="space-y-2">
                {toolData.access_info.system_requirements.platform.map(platform => (
                  <div class="flex items-center space-x-2">
                    <span class="w-2 h-2 bg-green-500 rounded-full"></span>
                    <span class="text-gray-600 text-sm">{platform}</span>
                  </div>
                ))}
              </div>
            </div>
            
            {toolData.access_info.system_requirements.browser && (
              <div>
                <h4 class="font-medium text-gray-900 mb-3">浏览器要求</h4>
                <div class="space-y-2">
                  {toolData.access_info.system_requirements.browser.map(browser => (
                    <div class="flex items-center space-x-2">
                      <span class="w-2 h-2 bg-green-500 rounded-full"></span>
                      <span class="text-gray-600 text-sm">{browser}</span>
                    </div>
                  ))}
                </div>
              </div>
            )}
            
            {toolData.access_info.system_requirements.other && (
              <div>
                <h4 class="font-medium text-gray-900 mb-3">其他要求</h4>
                <div class="space-y-2">
                  {toolData.access_info.system_requirements.other.map(requirement => (
                    <div class="flex items-center space-x-2">
                      <span class="w-2 h-2 bg-green-500 rounded-full"></span>
                      <span class="text-gray-600 text-sm">{requirement}</span>
                    </div>
                  ))}
                </div>
              </div>
            )}
          </div>
        </div>
      )}
    </div>
  </ToolDetailSection>

  <!-- 6. FAQ/注意事项 -->
  <ToolDetailSection title="FAQ / 注意事项" icon="❓">
    <div class="space-y-6">
      {toolData.faq.map(faq => (
        <div class="border border-gray-200 rounded-lg p-6">
          <h3 class="font-semibold text-gray-900 mb-3 flex items-start">
            <span class="text-primary-600 mr-2">Q:</span>
            {faq.question}
          </h3>
          <div class="flex items-start">
            <span class="text-secondary-600 mr-2 font-medium">A:</span>
            <p class="text-gray-600 leading-relaxed">{faq.answer}</p>
          </div>
          {faq.category && (
            <div class="mt-3">
              <span class="bg-gray-100 text-gray-600 text-xs px-2 py-1 rounded">
                {faq.category}
              </span>
            </div>
          )}
        </div>
      ))}
    </div>
  </ToolDetailSection>

  <!-- CTA Section -->
  <div class="bg-gradient-to-r from-primary-600 to-secondary-600 rounded-xl p-8 text-center">
    <h2 class="text-2xl font-bold text-white mb-4">准备开始使用？</h2>
    <p class="text-primary-100 mb-6">立即体验 {toolData.title} 的强大功能</p>
    <div class="flex flex-col sm:flex-row gap-4 justify-center">
      <a
        href={toolData.url}
        target="_blank"
        rel="noopener noreferrer"
        class="bg-white text-primary-600 font-semibold px-8 py-3 rounded-lg hover:bg-gray-50 transition-colors"
      >
        免费试用
      </a>
      <a
        href="/"
        class="border-2 border-white text-white font-semibold px-8 py-3 rounded-lg hover:bg-white hover:text-primary-600 transition-colors"
      >
        查看更多工具
      </a>
    </div>
  </div>
</ToolDetailLayout>