---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import CategoryCard from '../../components/CategoryCard.astro';
import ToolCard from '../../components/ToolCard.astro';
import { categories, featuredTools } from '../../data/tools';

const pageTitle = "AI工具大全 - AI Compass";
const pageDescription = "浏览全部AI工具分类，包含图像工具、文本工具、效率工具等多个领域的专业AI工具推荐。";
---

<BaseLayout title={pageTitle} description={pageDescription}>
  <Header />
  
  <main class="min-h-screen bg-gray-50">
    <!-- Hero Section -->
    <section class="bg-gradient-to-br from-primary-50 via-white to-secondary-50 py-16">
      <div class="max-w-6xl mx-auto px-4 sm:px-6 text-center">
        <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6">
          AI工具大全
        </h1>
        <p class="text-xl text-gray-600 mb-8 max-w-3xl mx-auto">
          按分类浏览所有AI工具，找到最适合你需求的专业解决方案
        </p>
        
        <!-- Search Bar -->
        <div class="max-w-2xl mx-auto mb-8">
          <div class="relative">
            <input 
              type="search" 
              placeholder="搜索 AI 工具..."
              class="w-full pl-12 pr-4 py-4 text-lg border border-gray-300 rounded-xl focus:ring-2 focus:ring-primary-500 focus:border-transparent"
            />
            <div class="absolute inset-y-0 left-0 pl-4 flex items-center">
              <svg class="w-6 h-6 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
              </svg>
            </div>
          </div>
        </div>
      </div>
    </section>
    
    <!-- Categories Section -->
    <section class="py-16">
      <div class="max-w-6xl mx-auto px-4 sm:px-6">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold text-gray-900 mb-4">工具分类</h2>
          <p class="text-gray-600 max-w-2xl mx-auto">
            选择你感兴趣的工具分类，探索该领域的优质AI工具
          </p>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
          {categories.map(category => (
            <CategoryCard {...category} />
          ))}
        </div>
      </div>
    </section>
    
    <!-- Popular Tools -->
    <section class="py-16 bg-white">
      <div class="max-w-6xl mx-auto px-4 sm:px-6">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold text-gray-900 mb-4">热门工具</h2>
          <p class="text-gray-600 max-w-2xl mx-auto">
            最受用户欢迎的AI工具推荐
          </p>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {featuredTools.map(tool => (
            <ToolCard {...tool} />
          ))}
        </div>
        
        <div class="text-center mt-12">
          <p class="text-gray-500 text-lg">
            想要查看特定分类的工具？点击上方分类卡片进行浏览
          </p>
        </div>
      </div>
    </section>
    
    <!-- Stats Section -->
    <section class="py-16 bg-gradient-to-r from-primary-600 to-secondary-600">
      <div class="max-w-4xl mx-auto px-4 sm:px-6">
        <div class="grid grid-cols-2 md:grid-cols-4 gap-8 text-center text-white">
          <div>
            <div class="text-4xl font-bold mb-2">50+</div>
            <div class="text-primary-100">优质工具</div>
          </div>
          <div>
            <div class="text-4xl font-bold mb-2">10,000+</div>
            <div class="text-primary-100">用户评价</div>
          </div>
          <div>
            <div class="text-4xl font-bold mb-2">4</div>
            <div class="text-primary-100">主要分类</div>
          </div>
          <div>
            <div class="text-4xl font-bold mb-2">24/7</div>
            <div class="text-primary-100">持续更新</div>
          </div>
        </div>
      </div>
    </section>
  </main>
  
  <Footer />
</BaseLayout>